block contents
  .breadcrumb-area
    .container
      .breadcrumb-content
        ul
          li
            a(href='#') Home
          |
          li.active Search
  // Li's Breadcrumb Area End Here
  // Begin Li's Content Wraper Area
  .content-wraper.pt-60.pb-60.pt-sm-30
    .container
      .row
        .col-lg-9.order-1.order-lg-2
          // Begin Li's Banner Area
          .single-banner.shop-page-banner
            a(href='#')
              img(src='/images/bg-banner/2.jpg', alt="Li's Static Banner")
          // Li's Banner Area End Here
          // shop-top-bar start
          .shop-top-bar.mt-30
            .shop-bar-inner
              .product-view-mode
                // shop-item-filter-list start
                ul.nav.shop-item-filter-list(role='tablist')
                  li.active(role='presentation')
                    a.active.show(aria-selected='true', data-toggle='tab', role='tab', aria-controls='grid-view', href='#grid-view')
                      i.fa.fa-th
                  |
                  li(role='presentation')
                    a(data-toggle='tab', role='tab', aria-controls='list-view', href='#list-view')
                      i.fa.fa-th-list
                // shop-item-filter-list end
              |
              .toolbar-amount
                span Showing 1 to 9 of #{countItems}
            // product-select-box start
            .product-select-box
              .product-short
                p Sort By:
                |
                select.nice-select
                  option(value='trending') Relevance
                  |
                  option(value='sales') Name (A - Z)
                  |
                  option(value='sales') Name (Z - A)
                  |
                  option(value='rating') Price (Low &gt; High)
                  |
                  option(value='date') Rating (Lowest)
                  |
                  option(value='price-asc') Model (A - Z)
                  |
                  option(value='price-asc') Model (Z - A)
            // product-select-box end
          // shop-top-bar end
          // shop-products-wrapper start
          .shop-products-wrapper
            .tab-content
              #grid-view.tab-pane.fade.active.show(role='tabpanel')
                .product-area.shop-product-area
                  .row
                      each product in products
                          .col-lg-4.col-md-4.col-sm-6.mt-40
                              include ../layouts/compornents/product-grid
              |
              #list-view.tab-pane.fade.product-list-view(role='tabpanel')
                .row
                    .col
                      each product in products
                        include ../layouts/compornents/product-list
              .paginatoin-area
                .row
                  .col-lg-6.col-md-6.pt-xs-15
                    p Total: #{countItems} items
                  |
                  .col-lg-6.col-md-6
                    ul.pagination-box.pt-xs-20.pb-xs-15
                      if (page === 1)
                        li
                          a(href='?page=' + (page - 1), class="Previous disabled")
                            i.fa.fa-chevron-left
                            | Previous
                      else
                        li
                          a(href='?page=' + (page - 1), )
                            i.fa.fa-angle-left
                      if (page !== 1)
                        li
                          a(href='?page=' + (page - 1))= page - 1
                      li.active
                        a(href='?page=' + page)= page
                      if ((page + 1) <= maxPage)
                        li
                          a(href='?page=' + (page + 1))= page + 1
                      if ((page + 2) <= maxPage)
                        li
                          a(href='?page=' + (page + 2))= page + 2
                      if (page === maxPage)
                        li.next.disabled
                          a(href='?page=' + (page + 1))
                            i.fa.fa-angle-right
                      else
                        li.next
                          a(href='?page=' + (page + 1))
                            i.fa.fa-angle-right
