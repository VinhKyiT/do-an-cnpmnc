                            .col.col-sm-12.col-md-5.col-lg-5.hidden-sm
                                .col.col-sm-6.col-md-6.no-padding
                                    .lbl-cnt
                                        span.lbl Sort by
                                        .fld.inline
                                            .dropdown.dropdown-small.dropdown-med.dropdown-white.inline
                                                button.btn.dropdown-toggle(data-toggle='dropdown', type='button')
