              //-       |
              //-       option(value='3', title='L') 80x120cm
              //- |
              .single-add-to-cart
                form.cart-quantity(action='/products/add-to-cart/'+product._id)
                  .quantity
                    label Quantity
                    |
                    .cart-plus-minus
                      input.cart-plus-minus-box(value='1', type='text', name='quantity')
                      |
                      .dec.qtybutton
                        i.fa.fa-angle-down
                      |
                      .inc.qtybutton
                        i.fa.fa-angle-up
                  |
                  button.add-to-cart(type='submit') Add to cart
              |
              .product-additional-info.pt-25
                a.wishlist-btn(href='/products/add-to-wishlist/'+product._id)
                  i.fa.fa-heart-o
                  | Add to wishlist
                |
                .product-social-sharing.pt-25
                  ul
                    li.facebook
                      a(href='#')
                        i.fa.fa-facebook
                        | Facebook
                    |
                    li.twitter
                      a(href='#')
                        i.fa.fa-twitter
                        | Twitter
                    |
                    li.google-plus
                      a(href='#')
                        i.fa.fa-google-plus
                        | Google +
                    |
                    li.instagram
                      a(href='#')
                        i.fa.fa-instagram
                        | Instagram
              |
              .block-reassurance
                ul
                  li
                    .reassurance-item
                      .reassurance-icon
                        i.fa.fa-check-square-o
                      |
                      p Security policy (edit with Customer reassurance module)
                  |
                  li
                    .reassurance-item
                      .reassurance-icon
                        i.fa.fa-truck
                      |
                      p Delivery policy (edit with Customer reassurance module)
                  |
                  li
                    .reassurance-item
                      .reassurance-icon
                        i.fa.fa-exchange
                      |
                      p  Return policy (edit with Customer reassurance module)
  // content-wraper end
  // Begin Product Area
  .product-area.pt-35
    .container
      .row
        .col-lg-12
          .li-product-tab
            ul.nav.li-product-menu
              li
                a.active(data-toggle='tab', href='#description')
                  span Description
              |
              li
                a(data-toggle='tab', href='#product-details')
                  span Product Details
              |
              li
                a(data-toggle='tab', href='#reviews')
                  span Reviews
          // Begin Li's Tab Menu Content Area
      |
      .tab-content
        #description.tab-pane.active.show(role='tabpanel')
          .product-description
            span= product.description
        |
        #product-details.tab-pane(role='tabpanel')
          .product-details-manufacturer
            a(href='#')
              img(src=product.image, alt='Product Manufacturer Image', width='200px', height='auto')
            |
            p
              span Reference
              |  demo_7
            |
            p
              span Reference
              |  demo_7
        |
        #reviews.tab-pane(role='tabpanel')
          .product-reviews
            .product-details-comment-block
              .comment-review
                span Grade
                |
                ul.rating
                  li
                    i.fa.fa-star-o
                  |
                  li
                    i.fa.fa-star-o
                  |
                  li
                    i.fa.fa-star-o
                  |
                  li.no-star
                    i.fa.fa-star-o
                  |
                  li.no-star
                    i.fa.fa-star-o
              |
              .comment-author-infos.pt-25
                span HTML 5
                |
                em 01-12-18
              |
              .comment-details
                h4.title-block Demo
                |
                p Plaza
              |
              .review-btn
                a.review-links(href='#', data-toggle='modal', data-target='#mymodal') Write Your Review!
              // Begin Quick View | Modal Area
              #mymodal.modal.fade.modal-wrapper
                .modal-dialog.modal-dialog-centered(role='document')
                  .modal-content
                    .modal-body
                      h3.review-page-title Write Your Review
                      |
                      .modal-inner-area.row
                        .col-lg-6
                          .li-review-product
                            img(src=product.image, alt="Li's Product", width="400px", height="auto")
                            |
                            .li-review-product-desc
                              p.li-product-name= product.name
                              |
                              p
                                span= product.description
                        |
                        .col-lg-6
                          .li-review-content
                            // Begin Feedback Area
                            .feedback-area
                              .feedback
                                h3.feedback-title Our Feedback
                                |
                                form(action='#')
                                  p.your-opinion
                                    label Your Rating
                                    |
                                    span
                                      select.star-rating
                                        option(value='1') 1
                                        |
                                        option(value='2') 2
                                        |
                                        option(value='3') 3
                                        |
                                        option(value='4') 4
                                        |
                                        option(value='5') 5
                                  |
                                  p.feedback-form
                                    label(for='feedback') Your Review
                                    |
                                    textarea#feedback(name='comment', cols='45', rows='8', aria-required='true')
                                  |
                                  .feedback-input
                                    p.feedback-form-author
                                      label(for='author')
                                        | Name
                                        span.required *
                                      |
                                      input#author(name='author', value='', size='30', aria-required='true', type='text')
                                    |
                                    p.feedback-form-author.feedback-form-email
                                      label(for='email')
                                        | Email
                                        span.required *
                                      |
                                      input#email(name='email', value='', size='30', aria-required='true', type='text')
                                      |
                                      span.required
                                        sub *
                                        |  Required fields
                                    |
                                    .feedback-btn.pb-15
                                      a.close(href='#', data-dismiss='modal', aria-label='Close') Close
                                      |
                                      a(href='#') Submit
                            // Feedback Area End Here
              // Quick View | Modal Area End Here
  // Product Area End Here
  // Begin Li's Laptop Product Area
  section.product-area.li-laptop-product.pt-30.pb-50
    .container
      .row
        // Begin Li's Section Area
        .col-lg-12
          .li-section-title
            h2
              span #{relatedCount} other products in the same category:
          |
          .row
            .product-active.owl-carousel
              each product in relatedProducts
                .col-lg-12
                  include ../layouts/compornents/product-grid
        // Li's Section Area End Here
  // Li's Laptop Product Area End Here