      .row.single-product-area
        .col-lg-5.col-md-6
          // Product Details Left
          .product-details-left
            .product-details-images.slider-navigation-1
              .lg-image
                a.popup-img.venobox.vbox-item(href= product.image, data-gall='myGallery')
                  img(src= product.image[0], alt='product image')
