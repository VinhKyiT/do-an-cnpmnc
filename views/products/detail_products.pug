              //- .lg-image
              //-   a.popup-img.venobox.vbox-item(href='images/product/large-size/5.jpg', data-gall='myGallery')
              //-     img(src='images/product/large-size/5.jpg', alt='product image')
              //- |
              //- .lg-image
              //-   a.popup-img.venobox.vbox-item(href='images/product/large-size/6.jpg', data-gall='myGallery')
              //-     img(src='images/product/large-size/6.jpg', alt='product image')
            //- |
            //- .product-details-thumbs.slider-thumbs-1
            //-   .sm-image
            //-     img(src='images/product/small-size/1.jpg', alt='product image thumb')
            //-   |
