.row.product-layout-list
    .col-lg-3.col-md-5
        .product-image
            a(href='/products/detail/'+product.code)
                img(src=product.image[0], alt=product.name)
            |
            span.sticker New
        |
    .col-lg-5.col-md-7
        .product_desc
            .product_desc_info
                .product-review
                    h5.manufacturer
                        a(href='/products/'+product.id_detail_category._id)= product.id_detail_category.name
                    |
                    .rating-box
                        ul.rating
                            li
                                i.fa.fa-star-o
                            |
                            li
                                i.fa.fa-star-o
                            |
                            li
                                i.fa.fa-star-o
                            |
                            li.no-star
                                i.fa.fa-star-o
                            |
                            li.no-star
                                i.fa.fa-star-o
                |
                h4
                    a.product_name(href='/products/detail/'+product.code)= product.name
                |
                .price-box
                    span.new-price= (product.price - product.price * (product.sale/100)).toLocaleString('vi', {style : 'currency', currency : 'VND'})
                    span.old-price= product.price.toLocaleString('vi', {style : 'currency', currency : 'VND'})
                    span.discount-percentage= "-"+product.sale+"%"
                |
                p= product.description
    |
    .col-lg-4
        .shop-add-action.mb-xs-30
            ul.add-actions-link
                li.add-cart
                    a(href='/products/add-to-cart/'+product._id) Add to cart
                |
                li.wishlist
                    a.links-details(href='/products/add-to-wishlist/'+product._id)
                        i.fa.fa-heart-o
                        | Add to wishlist
                |
                li
                    a.quick-view(data-toggle='modal', data-target='#exampleModalCenter', href='#')
                        i.fa.fa-eye
                        | Quick view